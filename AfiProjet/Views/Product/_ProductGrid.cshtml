
@model IEnumerable<AfiProjet.Models.Product>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ListPrice)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.SellStartDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ListPrice)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SellStartDate)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" title="Edit"><i class="fas fa-edit fa-lg"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.ProductId" title="Details"><i class="fas fa-file-alt fa-lg"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId" title="Delete"><i class="fas fa-trash-alt fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
